{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": false,            // Enable library checks for stricter compliance
    "strict": true,                   // Enable all strict type-checking options
    "strictNullChecks": true,         // Ensure null and undefined are handled explicitly
    "noImplicitAny": true,            // Avoid implicit 'any' types
    "strictBindCallApply": true,      // Ensure method calls are correctly typed
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing in imports
    "noFallthroughCasesInSwitch": true,        // Disallow fallthrough in switch cases
    "noImplicitReturns": true,        // Ensure all functions return something or nothing explicitly
    "noUnusedLocals": true,           // Report errors on unused local variables
    "noUnusedParameters": false,       // Report errors on unused parameters
    "noImplicitThis": true,           // Raise error when `this` is used implicitly
    "alwaysStrict": true,             // Parse in strict mode and emit `"use strict"` for modules
    "esModuleInterop": true,          // Ensure interoperability between CommonJS and ES modules
    "noUncheckedIndexedAccess": true  // Add `undefined` to keys not explicitly declared
  }
}
